        <value>(function execute(inputs, outputs) {
	try {
    	
      	// There is a connection &amp; credential alias with this scoped app, and the connection
      	//   defined on that alias needs to have an AWS credential created.  The following
      	//   steps will lookup the credentials associated with the existing connection definition
      	var connGr = new GlideRecord('http_connection');
  		connGr.addQuery('name','AWSec2Conn');
  		connGr.query();
  
    	if(connGr.next()){
  			var credGr = new GlideRecord('aws_credentials');
			credGr.addQuery('sys_id', connGr.credential);
			credGr.query();
		
			if (credGr.next()) {
				var cred = {};
				cred.accessKey = credGr.access_key;
               
              	//DecryptForScope is a custom script include 
              	var decrypted = new global.DecryptForScope(); 
    	    	cred.secretKey = decrypted.decrypt(credGr.secret_key); 
    	
    			var awsCredentials = {
					secretAccessKey: cred.secretKey,
					accessKeyId: cred.accessKey
				};
    		}
          
          	var opts = {host:'ec2.amazonaws.com', method:'GET', service: 'ec2', region: inputs.region, path: inputs.path, headers: {}};
      
            aws4.sign(opts, awsCredentials);
            
			outputs.auth = opts.headers.Authorization;
            outputs.date = opts.headers['X-Amz-Date'];
          
            //Uncomment to troubleshoot
          	//var str = JSON.stringify(opts);
            //gs.info('*** AWS Signed output: '+str, 'AWS Spoke signing');
    	}
    }
 	catch (e) {
    	gs.error("Error getting connection credential: " + e); 
    }
})(inputs, outputs);
</value>
